<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="vbox"
      alignment="CENTER"
      prefHeight="280.0" maxHeight="280"
      prefWidth="250.0" spacing="100.0"
      stylesheets="@Atributos6.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.ControladorAtributos">

    <Button fx:id="volver" text="◀️" alignment="CENTER" onAction="#volverCartas"/>

    <!-- CARTA -->
    <VBox fx:id="cartaMonstruo" alignment="BOTTOM_CENTER"
          prefHeight="360" maxHeight="360"
          prefWidth="250" maxWidth="250">
        <Label fx:id="nombreCarta" text="SOLDADO"
               alignment="CENTER"
               prefWidth="260" maxWidth="260"
               prefHeight="30" maxHeight="30"/>
    </VBox>



    <!-- ATRIBUTOS -->
    <VBox fx:id="cartaAtributos" alignment="CENTER"  maxWidth="300.0" prefWidth="300.0" maxHeight="280" prefHeight="280">

        <Label fx:id="nombreMonstruo" alignment="CENTER" text="SOLDADO" maxWidth="300.0" prefWidth="300.0" prefHeight="20" maxHeight="20">
            <font>
                <Font size="25.0" />
            </font>
            <padding>
                <Insets bottom="10"/>
            </padding>

        </Label>

        <VBox fx:id="atributos" alignment="CENTER" maxWidth="300.0" prefHeight="300.0" prefWidth="250.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
            <padding>
                <Insets topRightBottomLeft="20" />
            </padding>

            <Button fx:id="tipo" text="CABALLERO" />
            <Button text="Fuerza - 20" />
            <Button text="Vida - 30" />
            <Button text="Defensa - 10" />
        </VBox>

    </VBox>
</HBox>
